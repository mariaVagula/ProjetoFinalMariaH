@model ProjetoFinalMariaH.Models.LocalRealizacao

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Local de Realização</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LocalNome" class="control-label"></label>
                <input asp-for="LocalNome" class="form-control" />
                <span asp-validation-for="LocalNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CidadeId" class="control-label"></label>
                <select asp-for="CidadeId" class ="form-control" asp-items="ViewBag.CidadeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" class="button" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
